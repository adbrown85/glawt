# @configure_input@

# Package
package     := @PACKAGE_NAME@
version     := @PACKAGE_VERSION@
tarname     := @PACKAGE_TARNAME@

# Directories
prefix      := @prefix@
exec_prefix := @exec_prefix@
bindir      := @bindir@
srcdir      := ../src
datarootdir := @datarootdir@
datadir     := @datadir@
docdir      := @docdir@
htmldir     := @htmldir@
moduledirs  := ${filter %/,${wildcard $(srcdir)/*/}}
modules     := ${patsubst $(srcdir)/%/,%,$(moduledirs)}

# Tools
CXX         := @CXX@
INCLUDES    := -I.. -I$(srcdir) ${addprefix -I$(srcdir)/,$(modules)}
DEFS        := @DEFS@
DEFS_EXTRA  := 
DEPS_CFLAGS := @DEPS_CFLAGS@
CXXFLAGS    := @CXXFLAGS@ $(DEFS) $(DEFS_EXTRA) $(DEPS_CFLAGS) $(INCLUDES)
LIBS        := @LIBS@
LIBS_EXTRA  := 
DEPS_LIBS   := @DEPS_LIBS@
LDFLAGS     := @LDFLAGS@ $(LIBS) $(LIBS_EXTRA) $(DEPS_LIBS)
ARFLAGS     := -cr
INSTALL     := @INSTALL@

# Files
archive     := $(srcdir)/lib$(tarname).a
mains       := ${foreach m,$(modules),${wildcard $(m)/*.cxx}}
tests       := ${subst .cxx,,$(mains)}
objects     := ${subst .cxx,.o,$(mains)}
VPATH       := ${modules} $(srcdir) ${addprefix $(srcdir),$(modules)}

# General phony targets
.PHONY: all clean mostlyclean tests check
.DEFAULT: all
all: tests
clean: mostlyclean
mostlyclean:
	@echo "  Removing tests..."
	@$(RM) $(tests)
check:
	@echo "  MAINS   = $(mains)"
	@echo "  OBJECTS = $(objects)"
	@echo "  TESTS   = $(tests)"
	@echo "  MODULES = $(modules)"

# Modules
.PHONY: $(modules)
define module
$(1): $${filter $(1)/%,$(tests)}
endef
${foreach m,$(modules),${eval ${call module,$(m)}}}

# Tests
%: %.cxx %.o
	@echo "  $<"
	@$(CXX) $(CXXFLAGS) -o ${dir $<}${notdir $@} $< $(archive) $(LDFLAGS)
tests: ${notdir $(tests)}
${notdir $(tests)}:

# Objects
%.o:
	$(MAKE) -C $(srcdir) ${notdir $@}
